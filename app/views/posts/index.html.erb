<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 display-4">Listing Posts</h4>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcRuW3X_QtQvWNjhARCJBYQ5hCoy6RMCrpD33Q&usqp=CAU">
  </br></br>
  <%= link_to 'Create Post', new_post_path %>
  <% if @posts.present? %>
    <div class="row justify-content-center">
      <table class="table table-bordered">
        <thead>

          <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Author</th>
            <th scope="col" colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.title %></td>
                <td><%= post.description %></td>
                <td><%= link_to 'Edit Author', edit_post_path(post.id) %></td>
                <td><%= link_to 'Show', post_path(post.id) %></td>
                <td><%= link_to 'Edit', edit_post_path(post.id) %></td>
                <td><%= link_to 'Delete',
                      post_path(post.id),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="p-3 mb-2 bg-light text-dark">
      <span class="text-info font-weight-bold">Welcome! </span></br>
      Create your first post
    </div>
  <% end %>
  
</div>

